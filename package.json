{
  "name": "veresk-todos",
  "main": "./src/index.html",
  "pear": {
    "name": "veresk-todos",
    "type": "desktop",
    "gui": {
      "height": 540,
      "width": 720
    }
  },
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "pear-dev": "pear run -d .",
    "tailwind": "tailwindcss -i ./src/input.css -o ./src/output.css",
    "tailwind:watch": "npm run tailwind -- --watch",
    "dev": "npm-run-all --parallel tailwind:watch pear-dev",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "pear-interface": "^1.0.0",
    "tailwindcss": "^3.4.13"
  },
  "dependencies": {
    "uhtml": "^4.5.11"
  }
}
