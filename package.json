{
  "name": "veresk-todos",
  "main": "index.html",
  "pear": {
    "name": "veresk-todos",
    "type": "desktop",
    "gui": {
      "height": 540,
      "width": 720
    }
  },
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "npm-run-all --parallel tsc:watch tailwind:watch pear-dev",
    "dev:clean": "npm-run-all --sequential build dev",
    "build": "npm-run-all --sequential clean tsc tailwind",
    "clean": "rimraf dist",
    "tsc": "tsc",
    "tsc:watch": "npm run tsc -- --watch",
    "tailwind": "tailwindcss -i ./src/main.css -o ./dist/main.css",
    "tailwind:watch": "npm run tailwind -- --watch",
    "pear-dev": "pear run -d .",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.13",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "pear-interface": "^1.0.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uhtml": "^4.5.11"
  }
}
